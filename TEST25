//Fruit.java
public enum Fruit {
	苹果,梨,香蕉,西瓜,芒果;
}
//Excample7_7.java
public class Excample7_7 {
	public static void main(String args[]) {
		double price=0;
		boolean show=false;
		for(Fruit fruit:Fruit.values()) {
			switch(fruit) {
			case 苹果:price=5.5;
			         show=true;
			         break;
			case 梨:price=2.3;
			         show=true;
			         break;
			case 香蕉:price=12.4;
			         show=true;
			         break;
			default :show=false;
			}
			if(show) {
				System.out.println(fruit+"500克的价格为："+price+"元");
			}
			   
		}
	}
}
